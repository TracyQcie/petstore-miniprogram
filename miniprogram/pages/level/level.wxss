/* miniprogram/pages/level/level.wxss */

.level {
  color: grey;
}

.devide {
  width: 10rpx;
  height: 10rpx;
  display: inline-block;
}

.my-level {
  margin-top: 5%;
  text-align: center;
  position: relative;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.user-icon {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
}

.level-list-container {
  height: 100px;
  white-space: nowrap;
  text-align: center;
}

.level-icon {
  display: inline-block;
  margin: 10rpx;
}

.level-detial {
  text-align: center;
  width: 100%;
}

.level-detail-background {
  width: 80%;
  height: 600rpx;
  display: inline-block;
  position: absolute;
  z-index: -1;
  opacity: 0.5;
  bottom: 0;
}

.level-title {
  font-size: 50rpx;
  display: inline-block;
}

.level-color-1 {
  color: LightSteelBlue;
}

.level-color-2 {
  color: Plum;
}

.level-color-3 {
  color: Coral;
}

.level-color-4 {
  color: Orange;
}

.level-color-5 {
  color: YellowGreen;
}

.level-color-6 {
  color: OrangeRed;
}
