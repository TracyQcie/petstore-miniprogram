/* miniprogram/pages/pay/pay.wxss */
button:not([size='mini']) {
  width: 250rpx;
  margin-left: auto;
  margin-right: auto;
}

.address-container {
  padding: 25rpx;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.13);
}

.address-content {
  padding-right: 15rpx;
  display: inline-block;
}

.receiver {
  display: inline-block;
}

.phone {
  display: inline-block;
  font-size: 25rpx;
  color: grey;
  margin-left: 11px;
}

.location-icon {
  font-size: 50rpx;
  color: #f67879;
  margin: 10rpx;
}

.adress-detail {
  font-size: 25rpx;
  margin-top: 15rpx;
}

.address-operation {
  display: inline-block;
}

.chosen-button {
  color: grey;
  display: inline-block;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.van-card__bottom {
  line-height: 20px;
  margin-top: 80rpx;
}

.bottom-bar {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 100;
  height: 100rpx;
  border: 1rpx solid rgba(128, 128, 128, 0.13);
  background-color: #fff;
}

.total-price {
  display: inline-block;
  font-size: 26rpx;
  color: grey;
  text-decoration: line-through;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.payment-fee {
  display: inline-block;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.summit-button {
  border-radius: 50rpx;
  background-color: #f67879;
  color: #fff;
}

.button-container {
  float: right;
  margin-right: 20rpx;
  margin-top: 15rpx;
}

.price {
  display: inline-block;
  color: rgba(248, 37, 37, 0.808);
  font-size: 40rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
